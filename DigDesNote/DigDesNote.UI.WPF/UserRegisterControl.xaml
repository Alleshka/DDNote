<UserControl x:Class="DigDesNote.UI.WPF.UserRegisterControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DigDesNote.UI.WPF"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="200">
    <StackPanel>
        <Grid>
            <TextBlock HorizontalAlignment="Left">Логин:</TextBlock>
            <TextBox x:Name="_login" HorizontalAlignment="Left" Width="150" Margin="50,0,0,-0.4"></TextBox>
        </Grid>
        <Grid>
            <TextBlock HorizontalAlignment="Left">Почта:</TextBlock>
            <TextBox x:Name="_email" HorizontalAlignment="Left" Width="150" Margin="50,0,0,-0.4"></TextBox>
        </Grid>
        <Grid>
            <TextBlock HorizontalAlignment="Left">Пароль:</TextBlock>
            <PasswordBox x:Name="_password" HorizontalAlignment="Left" Width="150" Margin="50,0,0,-0.4"></PasswordBox>
        </Grid>
    </StackPanel>
</UserControl>
