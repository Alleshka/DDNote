<UserControl x:Class="DigDesNote.UI.WPF.NoteControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DigDesNote.UI.WPF"
             mc:Ignorable="d" 
             d:DesignHeight="250" d:DesignWidth="350">
    <Grid>
        <StackPanel>

            <!--Заголовок-->
            <Grid>
                <TextBlock HorizontalAlignment="Left" VerticalAlignment="Top">Заголовок:</TextBlock>
                <TextBox x:Name="_title" Height="20" Width="235" Margin="70, 0, 0, 0" HorizontalAlignment="Left" VerticalAlignment="Top" MaxLength="45"/>
            </Grid>

            <Grid Margin="0, 20, 0, 0">
                <TextBlock HorizontalAlignment="Left" VerticalAlignment="Top">Контент:</TextBlock>
                <TextBox x:Name="_content" Height="200" Width="235" Margin="70, 0, 0, 0" HorizontalAlignment="Left" VerticalAlignment="Top" AcceptsReturn="True" SpellCheck.IsEnabled="True" Language="ru-ru" TextWrapping="Wrap" AcceptsTab="True"/>
            </Grid>
        </StackPanel>
    </Grid>
</UserControl>
